#include <stdio.h>

int main() {
    int num;

    // Input an integer
    printf("Enter an integer: ");
    scanf("%d", &num);

    // Check if the number is positive, negative, or zero
    if (num > 0) {
        printf("The entered integer is positive.\n");
    } else if (num < 0) {
        printf("The entered integer is negative.\n");
    } else {
        printf("The entered integer is zero.\n");
    }

    return 0;
}
