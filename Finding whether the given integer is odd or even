#include <stdio.h>

int main() {
    int num;

    // Input an integer
    printf("Enter an integer: ");
    scanf("%d", &num);

    // Check if the number is odd or even
    if (num % 2 == 0) {
        printf("The entered integer is even.\n");
    } else {
        printf("The entered integer is odd.\n");
    }

    return 0;
}
